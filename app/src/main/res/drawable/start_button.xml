            <corners android:radius="15dp" />
            <gradient
                android:centerColor="#3BE8B0"
                android:endColor="#6A67CE"
                android:startColor="#1AAFD0"
                android:type="sweep"
                android:useLevel="false" />
        </shape>
    </item>
